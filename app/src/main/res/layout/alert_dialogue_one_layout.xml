<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alert_dialog_bg_selector"
    >
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/alert_one_view_content"
        android:textColor="@color/color_15"
        android:textSize="@dimen/tSize18"
        android:text="确认要拨打电话吗？"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/alert_dl_ll"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_height="@dimen/width40">
       <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="取消"
        android:id="@+id/alert_one_cancel_btn"
        android:textColor="@color/color_26"
        android:textSize="@dimen/tSize16"
        android:background="@null"
        android:layout_height="match_parent" />
        <View
            android:id="@+id/alert_one_btn_seperator_line"
            style="@style/vertical_seperator_line_style"
           />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="确认"
            android:id="@+id/alert_one_confirm_btn"
            android:textColor="@color/color_25"
            android:textSize="@dimen/tSize16"
            android:background="@null"
            android:layout_height="match_parent" />
        </LinearLayout>

    <View
        android:layout_above="@id/alert_dl_ll"
        style="@style/horizontal_seperator_line_style"
        />
</RelativeLayout>